private double aplicarReglas(int index, double precio, String nombre, int codigo) {
    // ğŸ§ª Cambiar estos casos segÃºn la consigna

    // Ejemplo 1: Si es el segundo producto, agregar IVA del 12%
    if (index == 1) {
        precio *= 1.12;
        areaResultados.append("ğŸ§¾ Se aplicÃ³ IVA del 12% al segundo producto.\n");
    }

    // Ejemplo 2: Si es el tercer producto y contiene la palabra 'especial', sumar 0.10
    if (index == 2 && nombre.toLowerCase().contains("especial")) {
        precio += 0.10;
        areaResultados.append("ğŸ’° Se sumaron $0.10 por ser un producto especial.\n");
    }

    // Ejemplo 3: Si el cÃ³digo es divisible por 3, aplicar descuento del 5%
    if (codigo % 3 == 0) {
        precio *= 0.95;
        areaResultados.append("ğŸ‰ CÃ³digo mÃºltiplo de 3, descuento del 5% aplicado.\n");
    }

    // Ejemplo 4: Si contiene la palabra "promo" o "oferta", aplicar 10% de descuento
    if (nombre.toLowerCase().contains("promo") || nombre.toLowerCase().contains("oferta")) {
        precio *= 0.90;
        areaResultados.append("ğŸ”– Producto en promociÃ³n, 10% de descuento aplicado.\n");
    }

    return precio;
}

